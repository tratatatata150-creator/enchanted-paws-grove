# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_BOT_USERNAME=YourBotUsername

# App Security
SECRET_KEY=change_this_to_a_long_random_secret_string_at_least_32_chars

# Database
DATABASE_URL=sqlite:///./enchanted_paws.db

# CORS — set to your frontend URL
FRONTEND_URL=https://your-app.vercel.app

# AI for creature names (optional — falls back to predefined list if missing)
GROQ_API_KEY=your_groq_api_key_from_console_groq_com

# Telegram Stars payment provider token (from @BotFather)
PAYMENT_PROVIDER_TOKEN=

# Environment
ENVIRONMENT=production
DEBUG=false
